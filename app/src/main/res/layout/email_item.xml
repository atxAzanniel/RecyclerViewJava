<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/card_view_bg"
    >

    <RelativeLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_icon"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/circle"
            tools:text="F"
            android:gravity="center"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/txt_user"
            android:textColor="@color/darkGrey"
            android:textSize="18sp"
            android:layout_alignTop="@id/txt_icon"
            android:layout_toEndOf="@id/txt_icon"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            tools:text="Facebook"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_toStartOf="@id/txt_date"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/txt_subject"
            tools:text="Encontramos um novo acesso a sua conta!"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_below="@id/txt_user"
            android:layout_alignStart="@id/txt_user"
            android:textColor="@color/darkGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_preview"
            tools:text="Sua conta foi acessada em um computador na nova zenlândia. Entre nas configurações."
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_below="@id/txt_subject"
            android:layout_alignStart="@id/txt_subject"
            android:textColor="@color/darkGrey"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_date"
            tools:text="20 mai"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/darkGrey"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_star"
            android:src="@drawable/ic_baseline_star_border_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/star" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>